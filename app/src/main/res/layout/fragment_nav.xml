<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_0_5"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.zrjt.tao.firstconsciousness.view.NavButton
            android:id="@+id/nav_item_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12" />

        <com.zrjt.tao.firstconsciousness.view.NavButton
            android:id="@+id/nav_item_tweet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12" />

        <ImageView
            android:id="@+id/nav_item_tweet_pub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_nav_add_selector" />

        <com.zrjt.tao.firstconsciousness.view.NavButton
            android:id="@+id/nav_item_explore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12" />

        <com.zrjt.tao.firstconsciousness.view.NavButton
            android:id="@+id/nav_item_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12" />

    </LinearLayout>

</LinearLayout>
